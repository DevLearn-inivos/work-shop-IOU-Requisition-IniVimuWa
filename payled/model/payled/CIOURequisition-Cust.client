selector CIOURequisitionSelector for CIouRequisition {

   label = "Cash A/C - ${CashAc}";
   field CashAc;
   field BranchManager;
   field CIouAmount;
}
selector CashAccSelector for CashAccount {
   static InstituteId;
   static Description;
}

@DynamicComponentDependency PERSON
selector RequestedBySelector for CompanyPerson {
   static Fname;
   static Lname;
}

@DynamicComponentDependency MPCCOM
selector CBranchManagerselector for BranchmanagersLov {
   static Userid;
}

selector CSiteSelector for SiteLov {
   static Contract;
}
